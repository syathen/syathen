{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/api/**",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }, {
        "source": "/api/**",
        "run": {
          "serviceId": "api",
          "region": "us-east1"
        }
      }
    ],
  "headers": [ {
    "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
    "headers": [ {
      "key": "Access-Control-Allow-Origin",
      "value": "max-age=2592000"
    } ]
  }, {
    "source": "**/*.@(ts|tsx|js|jsx)",
      "headers": [ {
        "key": "Access-Control-Allow-Origin",
        "value": "max-age=7200"
      } ]
  }, {
    "source": "**/*.@(jpg|jpeg|gif|png)",
    "headers": [ {
      "key": "Cache-Control",
      "value": "max-age=2592000"
    } ]
  }, {
    "source": "404.html",
    "headers": [ {
      "key": "Cache-Control",
      "value": "max-age=300"
    } ]
  } ]
  }
}
